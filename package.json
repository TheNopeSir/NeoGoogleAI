{
  "name": "neoarchive",
  "private": true,
  "version": "1.4.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "type-check": "tsc --noEmit --skipLibCheck",
    "build:full": "npm run type-check && vite build",
    "preview": "vite preview --host",
    "start": "node server.js",
    "deploy": "npm install && npm run build && npm run migrate:s3 && pm2 reload ecosystem.config.cjs --env production || pm2 start ecosystem.config.cjs --env production",
    "migrate:s3": "node migrateToS3.js",
    "android:init": "cap add android",
    "android:open": "npm run build:full && cap sync android && cap open android",
    "android:apk": "npm run build:full && cap sync android && cd android && ./gradlew assembleDebug"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@google/genai": "^0.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "idb": "^8.0.0",
    "lucide-react": "^0.344.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "web-push": "^3.6.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.19.0"
  }
}